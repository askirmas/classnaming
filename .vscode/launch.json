{
  "configurations": [
    {
      "type": "node",
      "name": "Jest current",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "runtimeArgs": [
        "--expose-gc"
      ],
      "args": [
        "${fileBasenameNoExtension}",
        "--testTimeout", "9999999", 
        "--watch",
        "--onlyFailures",
        "--runInBand",
        "--detectOpenHandles",
        "--logHeapUsage"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true
    },
    {
      "type": "node",
      "name": "Jest All",
      "request": "launch",
      "args": [
        "--runInBand"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "program": "${workspaceFolder}/node_modules/jest/bin/jest"
    }    
  ]
}